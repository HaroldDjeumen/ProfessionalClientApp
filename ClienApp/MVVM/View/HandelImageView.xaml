<UserControl x:Class="ClientApp.MVVM.View.HandelImageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientApp.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="515" d:DesignWidth="700">
    <StackPanel>
       <StackPanel Width="Auto"
            Height="30"
            Orientation="Horizontal"
            Background="#3f3d52"
                   VerticalAlignment="Top">
        
        <Button x:Name="Backbutton"
                Background="Transparent"
                BorderBrush="Transparent"
                Padding="0"
                HorizontalAlignment="Left"
                Visibility="Visible"
                Click="Backbutton_Click"
                Margin="5,5,0,0"
                Cursor="Hand"
                VerticalAlignment="Top">

            <Button.Style>
                <Style TargetType="Button" >
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="OverridesDefaultStyle" Value="True"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
            <Image Source="/Images/Icons/icons8-left-94.png" Width="20" Height="20" />
        </Button>

        <Button x:Name="NewImage"
                Background="Transparent"
                BorderBrush="Transparent"
                Padding="0"
                HorizontalAlignment="Left"
                Visibility="Visible"
                Click="NewImage_Click"
                Cursor="Hand">

            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="OverridesDefaultStyle" Value="True"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
            <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top">
                <Image Source="/Images/Icons/50x50/icons8-plus-50.png"
                   Width="15"
                   VerticalAlignment="Center"
                   Margin="10,5,0,0"/>
                <TextBlock Text="New Image"
                   FontSize="14"
                   Margin="5,5,3,0"
                   VerticalAlignment="Center"
                   Foreground="White"/>

            </StackPanel>
        </Button>

        <TextBox Width="210"
                 Height="25"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 Margin="290,0,0,0"
                 Style="{StaticResource ModernTextbox}"/>

        <Button x:Name="Trash"
                Background="Transparent"
                BorderBrush="Transparent"
                Padding="0"
                HorizontalAlignment="Left"
                Visibility="Visible"
                Click="DeleteImage_Click"
                Cursor="Hand">

            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="OverridesDefaultStyle" Value="True"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>

            <Image Source="/Images/Icons/50x50/icons8-trash-50.png"
                   Width="20"
                   Height="20"
                   Margin="10,0,0,0"/>
        </Button>

        <Button x:Name="Menu"
Background="Transparent"
BorderBrush="Transparent"
Padding="0"
HorizontalAlignment="Left"
Visibility="Visible"
Click="Menu_Click"
Cursor="Hand">

            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="OverridesDefaultStyle" Value="True"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>

            <Image Source="/Images/Icons/icons8-menu-94.png"
                   Width="20"
                   Height="20"
                   Margin="10,0,0,0"/>
        </Button>

           
        </StackPanel>
        <Grid>

            <!-- Scrollable Image Grid -->
            <ScrollViewer VerticalScrollBarVisibility="Visible"
                  HorizontalScrollBarVisibility="Disabled"
                  Margin="0,10,0,10"
                  MaxHeight="470"
                  Background="Transparent">

                <ScrollViewer.Resources>
                    <Style TargetType="ScrollBar" BasedOn="{StaticResource ModernScrollBarStyle}" />
                </ScrollViewer.Resources>

                <WrapPanel x:Name="ImageWrapPanel"
                   Orientation="Horizontal"
                   Margin="10">
                    <!-- Images will be added here dynamically -->
                </WrapPanel>

            </ScrollViewer>

            <!-- Overlay Grid to show expanded image -->
            <Grid x:Name="ImageOverlay"
                  Background="#AA000000"
                  Visibility="Collapsed"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  MaxHeight="470">

                <!-- Close Button -->
                <Button Content="X"
            Width="30"
            Height="30"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="10"
            Click="CloseOverlay_Click"/>

                <!-- ScrollViewer for zooming -->
                <ScrollViewer x:Name="ZoomScrollViewer"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto"
                              PanningMode="Both"
                              CanContentScroll="True"
                              PreviewMouseWheel="ZoomScrollViewer_MouseWheel">
                    <Grid>
                        <Image x:Name="ExpandedImage"
                               Width="450"
                               Height="450"
                               RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <ScaleTransform x:Name="ZoomTransform" ScaleX="1" ScaleY="1"/>
                            </Image.RenderTransform>
                        </Image>
                    </Grid>
                </ScrollViewer>
            </Grid>

        </Grid>

    </StackPanel>
</UserControl>
