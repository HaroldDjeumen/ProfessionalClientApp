<UserControl x:Class="ClientApp.MVVM.View.GallaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientApp.MVVM.View" 
             xmlns:core="clr-namespace:ClientApp.Core"
             xmlns:viewmodel="clr-namespace:ClientApp.MVVM.ViewModel"    
             d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="515" d:DesignWidth="700">


    <StackPanel>
        <Border x:Name="TopBar"
        Width="700"
        Height="30"
        CornerRadius="10,10,0,0"
        Background="#3f3d52">
            <StackPanel Width="Auto"
            Height="30"
            Orientation="Horizontal">

                <Button x:Name="NewFolder"
                Background="Transparent"
                BorderBrush="Transparent"
                Padding="0"
                HorizontalAlignment="Left"
                Visibility="Visible"
                Click="NewFolder_Click"
                Cursor="Hand"
                        Margin="25,0,0,0">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="OverridesDefaultStyle" Value="True"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <ContentPresenter/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top">
                        <Image Source="/Images/Icons/50x50/icons8-plus-50.png"
                   Width="15"
                   VerticalAlignment="Center"
                   Margin="10,5,0,0"/>
                        <TextBlock Text="New Folder"
                   FontSize="14"
                   Margin="5,5,3,0"
                   VerticalAlignment="Center"
                   Foreground="White"/>

                    </StackPanel>
                </Button>

                <TextBox Width="210"
                 Height="25"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 Margin="270,0,0,0"
                 Style="{StaticResource ModernTextbox}"/>

                <Button x:Name="Trash"
                Background="Transparent"
                BorderBrush="Transparent"
                Padding="0"
                HorizontalAlignment="Left"
                Visibility="Visible"
                Click="NewImage_Click"
                Cursor="Hand">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="OverridesDefaultStyle" Value="True"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <ContentPresenter/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>

                    <Image Source="/Images/Icons/50x50/icons8-trash-50.png"
                   Width="20"
                   Height="20"
                   Margin="10,0,0,0"/>
                </Button>

                <Button x:Name="Menu"
Background="Transparent"
BorderBrush="Transparent"
Padding="0"
HorizontalAlignment="Left"
Visibility="Visible"
Click="NewImage_Click"
Cursor="Hand">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="OverridesDefaultStyle" Value="True"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <ContentPresenter/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>

                    <Image Source="/Images/Icons/icons8-menu-94.png"
                           Width="20"
                           Height="20"
                           Margin="10,0,0,0"/>
                </Button>

            </StackPanel>
        </Border>

        <StackPanel x:Name="Properties"
                Background="Transparent"
                HorizontalAlignment="Left"
                Visibility="Visible">


            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                <WrapPanel Margin="0,0,10,10">

                    <Button x:Name="HomeHandel"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Padding="0"
                            HorizontalAlignment="Left"
                            Visibility="Visible"
                            Command="{Binding DataContext.WandEFolderViewCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="Handel">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="OverridesDefaultStyle" Value="True"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>

                        <StackPanel Margin="30,5,9,18" Width="100" Cursor="Hand">
                            <Image Source="/Images/Icons/100x100/icons8-folder-100.png" Width="100" Height="100"/>
                            <TextBlock Text="Handel" Foreground="White" FontWeight="SemiBold" FontSize="16"
                           HorizontalAlignment="Center" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="HomeSasol"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Padding="0"
                            HorizontalAlignment="Left"
                            Visibility="Visible"
                            Command="{Binding DataContext.WandEFolderViewCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="Sasol">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="OverridesDefaultStyle" Value="True"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>

                        <StackPanel Margin="18,5,9,18" Width="100" Cursor="Hand">
                            <Image Source="/Images/Icons/100x100/icons8-folder-100.png" Width="100" Height="100"/>
                            <TextBlock Text="Sasol" Foreground="White" FontWeight="SemiBold" FontSize="16"
                           HorizontalAlignment="Center" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="HomeVaalMall"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Padding="0"
                            HorizontalAlignment="Left"
                            Visibility="Visible"
                            Command="{Binding DataContext.WandEFolderViewCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="VaalMall">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="OverridesDefaultStyle" Value="True"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <StackPanel Margin="18,5,9,18" Width="100" Cursor="Hand">
                            <Image Source="/Images/Icons/100x100/icons8-folder-100.png" Width="100" Height="100"/>
                            <TextBlock Text="Vaal Mall" Foreground="White" FontWeight="SemiBold" FontSize="16"
                           HorizontalAlignment="Center" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="HomeVerdi"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Padding="0"
                            HorizontalAlignment="Left"
                            Visibility="Visible"
                            Command="{Binding DataContext.WandEFolderViewCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="Verdi">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="OverridesDefaultStyle" Value="True"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>

                        <StackPanel Margin="18,5,9,18" Width="100" Cursor="Hand">
                            <Image Source="/Images/Icons/100x100/icons8-folder-100.png" Width="100" Height="100"/>
                            <TextBlock Text="Verdi" Foreground="White" FontWeight="SemiBold" FontSize="16"
                           HorizontalAlignment="Center" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="Reciepts"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Padding="0"
                            HorizontalAlignment="Left"
                            Visibility="Visible"
                            Command="{Binding DataContext.HandelImageViewCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="Receipts;ReceiptsImage">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="OverridesDefaultStyle" Value="True"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>

                        <StackPanel Margin="18,5,9,18" Width="100" Cursor="Hand">
                            <Image Source="/Images/Icons/100x100/icons8-folder-100.png" Width="100" Height="100"/>
                            <TextBlock Text="Reciepts" Foreground="White" FontWeight="SemiBold" FontSize="16"
                           HorizontalAlignment="Center" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Button>


                </WrapPanel>
            </ScrollViewer>
        </StackPanel>
    </StackPanel>
</UserControl>
